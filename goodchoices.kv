#:kivy 1.0.9
#:import Factory kivy.factory.Factory

<Screen>:
    canvas:
        Color:
            rgb: .2, .2, .2
        Rectangle:
            size: self.size 

<MutableLabelTextInput@MultableTextInput>:
    Label:
        id: w_label 
        pos: root.pos 
        text: root.text 

<MutableRstDocumentTextInput@MutableTextInput>:
    RstDocument:
        id: w_label 
        pos: root.pos 
        text: root.text  

<GoodChoicesView>:
    on_chore_description: app.set_chore_description(self.chore_index, self.chore_description)

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            padding: '5dp'

            canvas:
                Color:
                    rgb: .3, .3, .3
                Rectangle:
                    pos: self.pos 
                    size: self.size 

            Button:
                text: 'Return to Chore List'
                size_hint_x: None 
                width: self.height 
                #on_release: app.go_chores() 
            
            MutableLabelTextInput:
                text: root.chore_description 
                font_size: '16sp'
                multiline: False 
                #on_text: root.chore_description = self.text 

            Button:
                text: 'Delete chore'
                size_hint_x: None 
                width: self.height 
                #on_release: app.del_chore(root.chore_index)

<GoodChoicesChore>:
    height: '48sp'
    size_hint_y: None 

    canvas:
        Color:
            rgb: .3, .3, .3 
        Rectangle:
            pos: self.pos 
            size: self.width, 1 
    
    BoxLayout:
        padding: '5dp'

        Label:
            text: root.chore_description 
        
        Button:
            text: 'Edit chore'
            size_hint_x: None 
            width: self.height
            #on_release: app.edit_chore(root.chore_index) 
            
        ToggleButton:
            text: 'Completed'
            size_hint_x: None 
            width: self.height
            #on_press: celebratory animation

<GoodChoices>:
    BoxLayout:
        orientation: 'vertical'
    
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None 
            height: '48dp'
            padding: '5dp'

            canvas:
                Color:
                    rgb: .3, .3, .3
                Rectangle:
                    pos: self.pos 
                    size: self.size 
            
            Image:
                source: 'data/IMG_5987.jpg'
                mipmap: True 
                size_hint_x: None 
                width: self.height 
            
            Label:
                text: 'Chores' 
                font_size: '16sp' 
            
            Button:
                text: 'Add a chore' 
                size_hint_x: None 
                width: self.height 
                #on_release: app.add_note 
            
        RecycleView:
            data: root.data_for_widgets 
            viewclass: 'GoodChoicesChore'

            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None 
                size_hint_y: None 
                height: self.minimum_height 
                orientation: 'vertical' 
                spacing: dp(2)

            


        