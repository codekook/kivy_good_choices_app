#:kivy 2.0.0
#:import Factory kivy.factory.Factory

<GoodChoicesChore>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: '5dp'
        canvas:
            Color:
                rgb: (.2, .2, .2)
            Rectangle:
                pos: self.pos 
                size: self.size

        Label:
            text: "Chores"
            id: profile_name
            size_hint_y: None
            pos_hint: {'top': 1}
            pos_hint: {'center_x': 0.5}

        Button:
            id: view_chore_list
            text: "View Chore List"
            on_press: root.manager.current = 'chorelistscreen'
            size_hint_y: None 
        
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: new_chore
                multiline: False
                size_hint_y: None
                pos_hint: {'top': 1}
                focus: True

            Button:
                id: chore_button
                text: "Add a chore"
                on_press: root.add_chore()
                size_hint_y: None
                pos_hint: {'top': 1}

<ChoreListScreen>:
    on_enter: root.view_chore_list()
    canvas:
        Color:
            rgb: (.2, .2, .2)
        Rectangle:
            pos: self.pos 
            size: self.size

<CelebrateScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: '5dp'
        canvas:
            Color:
                rgb: (.2, .2, .2)
            Rectangle:
                pos: self.pos 
                size: self.size
        Button:
            text: "Home"
            on_press: root.manager.current = 'chorelistscreen'
            size_hint_y: None 
            pos_hint: {'top': 1}
    Label:
        text: root.affirmation()
        font_size: '32sp'
        on_touch_down: root.animate_it(self)


            

            


        